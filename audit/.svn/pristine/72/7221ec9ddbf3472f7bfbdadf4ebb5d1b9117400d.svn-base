.id_title {
	background: #f7f7f7;
	padding: 0px 20px;
	line-height: 30px;
	height: 30px;
	font-weight: bold;
	color: #4490F7;
	font-size: 15px;
}

.add_show_footer{width:100%; float: left; margin-top: 10px;}
.add_show_footer ul{width: 180px;  float: left; margin-left:38%; }
.add_show_footer ul li{float: left;}
.add_show_footer ul li a{height: 24px;padding: 4px 20px;line-height: 24px;color: #FFF;background: #519E6C none repeat scroll 0% 0%;margin-left: 10px;text-align: center;border-radius: 3px; cursor: pointer;}

/* 选择指标弹出层 */
.index_pool{
	width: 350px;
	height: 450px;
	position: absolute;
	left: 530px;
	top: 40px;
	margin: auto;
	z-index: 10004;
	background-color: #fff;
	/* border-left:1px dashed #333; */
	display: none;
	border-radius: 7px;
	border: 3px solid #eeeeee;
}

.indexPool_head { width: 100%; float: left;}
.indexPool_head .indexPool_title{width: 100%; float: left; background-color: #DAE0E6; }
.indexPool_head .indexPool_title span{font-weight:bold; padding-left:10px; height:27px; line-height:27px;}
.close_icon{float: right; margin:3px 2px 0 0; cursor:pointer;}
.close_icon img{width: 29px;height: 22px;}

.choice{width: 80%; float: left; }
.choice ul{float: left; margin-left: 18px; margin-top: 7px;}
.choice ul li{ float: left; height: 20px; margin-bottom: 7px;}
.choice ul li input{border: 1px solid #D9D99D; line-height:20px; height:20px; padding-left:10px;}
.choice ul li select{ border: 1px solid #D9D99D; line-height: 22px;height: 22px;width: 162px;margin-left: -3px; }

.search_icon{width:19%; height:25px; float: left;}
.search_icon a{width:25px; height:25px; margin:18px 0px 0px 2px!important; cursor: pointer;}

.index_pool_content{width:95%; margin-left:2.5%; float: left;}
.index_pool_content table tr td{text-align: center;}

.index_pool_footer{width:100%;}
