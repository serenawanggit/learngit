@CHARSET "UTF-8";
/* 整个界面的显示  */
 .container{
 	margin:0 auto;
 	width: 100%;
 	height: 100%;
 }
 /*  导航栏样式 */
.topTab{
	width:100%;
	height:4em;
	background: #404A58;
	box-shadow: 0px 1px 3px #000;/*opera或ie9*/
	-webkit-box-shadow: 0px 1px 3px #000;
	border-bottom: 2px solid #404A58;
	position: static;
	float:none;
	clear:both;
	padding-left: 8em;
}
.topTab ul{
	float: left;
	margin-left: 6em;
	height: 4em;
	line-height: 4em;
}
.topTab ul li{
	width: 100px;
	display: inline;
	font-size: 14px;
    font-family:"微软雅黑";
}
.topTab a{float: left;
	margin-left: 30px;
	color: #EDF1F2 ;
	cursor:pointer;
	display: block;
	padding:0px 12px;
}
.topTab a:link{
	text-decoration:none;
}
.topTab a:visited{
	text-decoration:none;
}
.topTab a:hover{
	border-bottom: 2px solid #19C6A1;
}
.topTab a:active{
	text-decoration:none;	
}

/* 内容显示布局 */
.contexts{
	width:100%; 
	height:92%;
	overflow-x : hidden;   /* 去掉横条 */ 
    overflow-y : hidden;   /* 去掉竖条 */
}
